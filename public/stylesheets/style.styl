/*==========================================================================================*/
/*                                         D3 STYLES                                        */
/*==========================================================================================*/

.node
  fill: #ccc

.node.selected circle
  stroke: red

.node circle
  stroke #fff
  stroke-width: 1.5px
  opacity: 1.0
  pointer-events: all

.node text
  fill: black;
  pointer-events: none

line, path.link
  fill: none
  stroke: #666
  stroke-width: 1.5px
  stroke-opacity: 1.0

.brush .extent
  fill-opacity: .1
  stroke: #fff
  shape-rendering: crispEdges

/*==========================================================================================*/
/*                                       DROPDOWN STYLES                                    */
/*==========================================================================================*/

/* Dropdown Button */
.dropButton
  background-color: #4CAF50
  color: white
  padding: 16px
  font-size: 16px
  border: none
  cursor: pointer
  display: block
  position: relative
  text-decoration: none
  -webkit-border-radius: 8px
  -moz-border-radius: 8px
  border-radius: 8px
  -webkit-box-shadow: 0 9px 0 rgba(62,142,65,1), 0px 9px 25px rgba(0,0,0,.7)
  -moz-box-shadow: 0 9px 0 rgba(62,142,65,1), 0px 9px 25px rgba(0,0,0,.7)
  box-shadow: 0 9px 0 rgba(62,142,65,1), 0px 9px 25px rgba(0,0,0,.7)
  -webkit-transition: all .1s ease
  -moz-transition: all .1s ease
  -ms-transition: all .1s ease
  -o-transition: all .1s ease
  transition: all .1s ease

/* Dropdown button on hover & focus */
.dropButton:hover, .dropButton:focus
  background-color: #3e8e41
  box-shadow: 0 9px 0 rgba(52,119,54,1), 0px 9px 25px rgba(0,0,0,.7)

.dropButton:active
  -webkit-box-shadow: 0 3px 0 rgba(52,119,54,1), 0px 3px 6px rgba(0,0,0,.9)
  -moz-box-shadow: 0 3px 0 rgba(52,119,54,1), 0px 3px 6px rgba(0,0,0,.9)
  box-shadow: 0 3px 0 rgba(52,119,54,1), 0px 3px 6px rgba(0,0,0,.9)

/* The container <div> - needed to position the dropdown content */
.dropdown
  position: relative
  display: inline-block

/* Dropdown Content (Hidden by Default) */
.dropContent
  display: none
  position: absolute
  background-color: #f9f9f9
  min-width: 200px
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2)
  z-index: 999

/* Links inside the dropdown */
.dropContent a
  color: black
  padding: 12px 16px
  text-decoration: none
  display: block

/* Change color of dropdown links on hover */
.dropContent a:hover
  background-color: #f1f1f1

/* Show the dropdown menu (use JS to add this class to the .dropContent container when the user clicks on the dropdown button) */
.show
  display:block

/*==========================================================================================*/
/*                                     CUSTOMIZATION MENU                                   */
/*==========================================================================================*/

div.tabContainer
  z-index: 10
  background-color: #ffffff
  padding: 0 !important
  border-radius: 4px
  -moz-border-radius: 4px
  border:1px solid #ddd
  -webkit-box-shadow: 0 6px 12px rgba(0,0,0,.175)
  box-shadow: 0 6px 12px rgba(0,0,0,.175)
  -moz-box-shadow: 0 6px 12px rgba(0,0,0,.175)
  background-clip: padding-box
  opacity: 0.97
  filter unquote("alpha(opacity=97)")

div.tabMenu
  padding-right: 0
  padding-left: 0
  padding-bottom: 0

div.tabMenu div.list-group
  margin-bottom: 0

div.tabMenu div.list-group>a
  margin-bottom: 0

div.tabMenu div.list-group>a .glyphicon,
div.tabMenu div.list-group>a .fa
  color: #5A55A3

div.tabMenu div.list-group>a:first-child
  border-top-right-radius: 0
  -moz-border-top-right-radius: 0

div.tabMenu div.list-group>a:last-child
  border-bottom-right-radius: 0
  -moz-border-bottom-right-radius: 0

div.tabMenu div.list-group>a.active,
div.tabMenu div.list-group>a.active .glyphicon,
div.tabMenu div.list-group>a.active .fa
  background-color: #5A55A3
  background-image: #5A55A3
  color: #ffffff

div.tabMenu div.list-group>a.active:after
  content: ''
  position: absolute
  left: 100%
  top: 50%
  margin-top: -13px
  border-left: 0
  border-bottom: 13px solid transparent
  border-top: 13px solid transparent
  border-left: 10px solid #5A55A3

div.tabContent
  background-color: #ffffff
  /* border: 1px solid #eeeeee; */
  padding-left: 20px
  padding-top: 10px

div.customTab div.tabContent:not(.active)
  display: none

